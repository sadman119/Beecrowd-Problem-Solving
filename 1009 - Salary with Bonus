#include <stdio.h>
#include<math.h>
 
int main() {
 
    char name[30];
    scanf("%s",&name);
    
    float item,salary,total,totalf;
    
    scanf("%f %f",&salary,&item);
    
    total= (item*.15)+salary;
    totalf = ceil(total * 100) / 100;
     printf("TOTAL = R$ %.2f\n",totalf);
    
 
    return 0;
}
